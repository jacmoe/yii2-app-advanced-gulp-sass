{
    "name": "jacmoe/yii2-app-advanced-gulp-sass",
    "description": "Yii 2 Advanced Project Template with Gulp and Sass support",
    "keywords": ["yii2", "framework", "advanced", "gulp", "sass", "project template"],
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.6",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "bower-asset/font-awesome": "^4.5",
        "bower-asset/bootstrap-sass": "3.3.6"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "npm install",
            "gulp build"
        ]
    },
    "extra": {
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
